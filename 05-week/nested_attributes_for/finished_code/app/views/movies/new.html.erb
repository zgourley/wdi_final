<div class="container">
  <section>
    <h1>Add a new movie!</h1>

    <%= form_for @movie do |f| %>
        
        <div>
           <%= f.label :title, class: "form-label" %> 
           <%= f.text_field :title %>
        </div>


        <div>
           <%= f.label :rating, class: "form-label" %> 
           <%= f.text_field :rating, class: "num-input" %>
        </div>

        <div>
           <%= f.label :year, class: "form-label" %> 
           <%= f.text_field :year, class: "num-input" %>
        </div>

        <div>
           <%= f.label :description, class: "form-label" %> 
           <%= f.text_area :description, class: "text-area" %>
        </div>

        <%= f.submit "Add this movie!", class: "button" %>

    <% end %>
  </section>
</div>