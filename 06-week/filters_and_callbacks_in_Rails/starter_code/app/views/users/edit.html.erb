<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
      <h1>Edit your profile</h1>
      <%= form_for @user do |f| %>
      
        <% if @user.errors.any? %>
          <div>

            <h4 class="text-danger"><%= pluralize(@user.errors.count, "error") %> prevented you from updating your account:</h4>

            <ul class="list-group">
              <% @user.errors.full_messages.each do |msg| %>   
                <li class="list-group-item list-group-item-danger"><%= msg.downcase %></li>
              <% end %>
            </ul>            

          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <%= f.submit "Update your profile", class: "btn btn-primary" %>
        
      <% end %>
    </div>
  </div>
</div>